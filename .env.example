# Phala Cloud API
# Get your API key from https://docs.phala.com/phala-cloud/confidential-ai/confidential-model/confidential-ai-api
PHALA_API_KEY=your_api_key_here

# JWT Secret - generate a strong random string for production
# Example: openssl rand -hex 32
JWT_SECRET=dev-secret-change-in-production

# SIWE Domain - must match the domain users sign messages for
SIWE_DOMAIN=localhost:3000

# Database path (SQLite)
DB_PATH=./tbvh.db

# Negotiation Timeouts
# Overall timeout for entire negotiation (milliseconds, default: 300000 = 5 minutes)
NEGOTIATION_TIMEOUT_MS=300000
# Per-turn timeout for each agent response (milliseconds, default: 120000 = 2 minutes)
# Note: Phala/DeepSeek API can be slow, 2 minutes recommended
PER_TURN_TIMEOUT_MS=120000

# Rate Limiting
# Maximum negotiations a user can start per day (default: 10)
MAX_NEGOTIATIONS_PER_USER_PER_DAY=10
